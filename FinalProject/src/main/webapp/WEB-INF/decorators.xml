<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<excludes>
		<pattern>/api*</pattern>
		<pattern>/login*</pattern>
	</excludes>

	<!-- apply Sitemesh default template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>


	<decorator name="vendor" page="vendor.jsp">
		<pattern>/vendor*</pattern>
	</decorator>
	<decorator name="user" page="user.jsp">
		<pattern>/user*</pattern>
	</decorator>


	<decorator name="vendorLogin" page="vendorLogin.jsp">
		<pattern>/dangnhap*</pattern>
	</decorator>

	<decorator name="login" page="login.jsp">
		<pattern>/login*</pattern>
	</decorator>
	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>
</decorators>
